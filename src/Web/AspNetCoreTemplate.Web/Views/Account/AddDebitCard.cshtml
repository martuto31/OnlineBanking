@model AspNetCoreTemplate.Data.Models.DebitCard
@using AspNetCoreTemplate.Data.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row">
    <div class="col-md-10">
        <form asp-controller="Account" asp-action="AddDebitCard" method="post">
            <div asp-validation-summary="All">
                <div class="form-group">
                    <label asp-for="CardNumber" class="control-label"></label>
                    <input asp-for="CardNumber" class="form-control" type="number"/>
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExpirationDate" class="control-label"></label>
                    <input asp-for="ExpirationDate" type="date" class="form-control" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CVCCode" class="control-label"></label>
                    <input asp-for="CVCCode" class="form-control" type="password" />
                    <span asp-validation-for="CVCCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Currency" class="control-label"></label>
                    <select asp-for="Currency" class="form-control" asp-items="Html.GetEnumSelectList<Currency>()"></select>
                    <span asp-validation-for="Currency" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавете картата" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>
</div>